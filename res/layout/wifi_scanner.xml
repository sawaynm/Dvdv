<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wifi_scanner_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <Spinner
        android:id="@+id/wlan_interface"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <Spinner
        android:id="@+id/wifi_channel"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:text="@string/scan_networks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scan_networks" />

        <com.google.android.material.button.MaterialButton
            android:text="@string/show_networks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_networks" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sort_networks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_networks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear" />
    </LinearLayout>

    <ListView
        android:id="@+id/wifi_networks_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.00"
        android:padding="16dp"
        android:background="@android:color/black"
        android:textColor="@android:color/holo_green_light"
        android:fontFamily="monospace"
        android:textSize="14sp"
        tools:ignore="LabelFor" />
</LinearLayout>